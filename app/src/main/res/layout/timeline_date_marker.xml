<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/timeline_date_marker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/timeline_date_marker_margin"
        android:layout_marginTop="@dimen/timeline_date_marker_margin"
        android:layout_marginBottom="@dimen/timeline_date_marker_margin"
        android:text="TBD"
        android:textStyle="bold"
        android:textColor="?colorSecondary"
        android:textSize="@dimen/timeline_date_marker_font_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timeline_date_marker_line"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/timeline_date_marker_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/timeline_date_marker_line_height"
        android:layout_marginStart="@dimen/timeline_date_marker_margin"
        android:layout_marginEnd="@dimen/timeline_date_marker_margin"
        android:background="?colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/timeline_date_marker_text"
        app:layout_constraintTop_toTopOf="@id/timeline_date_marker_text"
        app:layout_constraintBottom_toBottomOf="@id/timeline_date_marker_text" />

</androidx.constraintlayout.widget.ConstraintLayout>