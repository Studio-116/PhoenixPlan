<resources>
    <!-- Base application theme. -->
    <style name="Theme.PhoenixPlan" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#008B8B</item>
        <item name="colorSecondaryVariant">#008B8B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PhoenixPlan.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.PhoenixPlan.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>